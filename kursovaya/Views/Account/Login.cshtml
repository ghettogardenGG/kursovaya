@model kursovaya.Models.Login
@{
    ViewData["Title"] = "Index";
}

 

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="mx-auto" style="width: 200px;">
        <h2>Вход на сайт</h2>
        <div class="row pb-2">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="row pb-2">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div >
            <input type="submit" value="Войти" class="btn btn-secondary" />
        </div>
    </div>
</form>
