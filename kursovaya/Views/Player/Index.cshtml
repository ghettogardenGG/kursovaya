@model IEnumerable<Player>
@{
	ViewData["Title"] = "Index";
}

<h1>Профили спорстменов</h1>
<a asp-controller="Player" asp-action="Create" class="btn btn-primary">
	Добавить спортсмена
</a>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				Имя
			</th>
			<th>
				Фамилия
			</th>
			<th>
				Возраст
			</th>
			<th>
				Спортивный титул
			</th>
			<th>
				Страна
			</th>
			<th>
				Детали
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td width="20%">
					@obj.Name
				</td>
				<td width="20%">
					@obj.Surname
				</td>
				<td width="5%">
					@obj.age
				</td>
				<td width="25%">
					@obj.sport_title
				</td>
				<td width="20%">
					@obj.country
				</td>
				<td width="10%">
					<a asp-controller="Player" asp-action="ProfilePlayer" asp-route-id="@obj.Id" class="btn btn-primary">
							Детали</a>
				</td>
			</tr>
		}
	</tbody>
</table>